<!-- query tasks options -->
<div class="filtering query">
    <h4>query options:</h4>
    <form class="form-inline" action="/user/tasks" method="post">
        <label>year:
            <select class="form-control" id="yearQuery" name="year_query">
                <% for (let i = 2017; i <= 2030; i++) { %>
                    <% if (year == i) {%>
                        <option selected><%= i %></option>
                    <% } else { %>
                        <option><%= i %></option>
                    <% } %>
                <% } %>
            </select>
        </label>
        <label>month:
            <select class="form-control" id="monthQuery" name="month_query">
                <% for (let i = 1; i <= 12; i++) { %>
                    <% if (month == i) {%>
                        <option selected><%= i %></option>
                    <% } else { %>
                        <option><%= i %></option>
                    <% } %>
                <% } %>
            </select>
        </label>
        <label>day:
            <select class="form-control" id="dayQuery" name="day_query"></select>
        </label>
        <p id="returnDay" type="text" style="display: none;"><%= day %></p>
        <button type="submit" class="btn btn-default" id="show-btn">show</button>
    </form>
</div>